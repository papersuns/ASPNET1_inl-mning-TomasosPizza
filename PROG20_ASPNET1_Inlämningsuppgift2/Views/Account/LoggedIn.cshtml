@model PROG20_ASPNET1_Inlämningsuppgift2.ModelsIdentity.ApplicationUser

<!--för att köra validering på klienten-->
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<div class="centerDiv">
    <form class="centerForm" asp-controller="Account" asp-action="LoggedIn" method="post">

        <h3>Välkommen @User.Identity.Name</h3>

        <br />

        <label asp-for="Name">Namn</label><br />
        <input type="text" asp-for="Name" value="@Model.Name" /><br />
        <span asp-validation-for="Name"></span>

        <br />

        <label asp-for="StreetAddress">Gatuadress</label><br />
        <input type="text" asp-for="StreetAddress" value="@Model.StreetAddress" /><br />
        <span asp-validation-for="StreetAddress"></span>

        <br />

        <label asp-for="PostalCode">Postnr</label><br />
        <input type="text" asp-for="PostalCode" value="@Model.PostalCode" /><br />
        <span asp-validation-for="PostalCode"></span>

        <br />

        <label asp-for="City">Postort</label><br />
        <input type="text" asp-for="City" value="@Model.City" /><br />
        <span asp-validation-for="City"></span>

        <br />

        <label asp-for="Email"></label><br />
        <input type="text" asp-for="Email" value="@Model.Email" /><br />
        <span asp-validation-for="Email"></span>

        <br />

        <label asp-for="PhoneNumber">Telefon</label><br />
        <input type="text" asp-for="PhoneNumber" value="@Model.PhoneNumber" /><br />
        <span asp-validation-for="PhoneNumber"></span>

        <br />

        <label asp-for="PasswordHash">Lösenord</label><br />
        <input type="password" asp-for="PasswordHash" /><br />
        <span asp-validation-for="PasswordHash"></span>

        <br /><br />

        <button type="submit">Uppdatera information</button>

    </form>

    <p>@ViewBag.Message</p>
</div>
